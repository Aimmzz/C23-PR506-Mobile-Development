<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_job"
    android:background="@drawable/bg_card2"
    android:layout_margin="12dp"
    android:padding="22dp">

    <ImageView
        android:id="@+id/im_company1"
        android:layout_width="89dp"
        android:layout_height="89dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/logo_perusahaan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_company1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="28dp"
        android:text="Content Writer"
        android:textColor="@color/black"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_logo_company"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/office"
        app:layout_constraintStart_toEndOf="@+id/im_company1"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_company1" />

    <ImageView
        android:id="@+id/im_loc_office"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/location_office"
        app:layout_constraintStart_toEndOf="@+id/im_company1"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_company1" />

    <TextView
        android:id="@+id/tv_office1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="PT. Skillpy Aliance"
        android:textColor="@color/text_hint"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toEndOf="@+id/im_loc_office"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_company1" />

    <TextView
        android:id="@+id/tv_loc_office1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Jl. Kramat Raya, Jakarta Pusat"
        android:textColor="@color/text_hint"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toEndOf="@+id/im_loc_office"
        app:layout_constraintTop_toBottomOf="@+id/tv_office1" />

</androidx.constraintlayout.widget.ConstraintLayout>